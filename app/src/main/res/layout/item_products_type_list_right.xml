<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/iv_production"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:scaleType="fitCenter"
        tools:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_production_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_b_d"
            android:textSize="15sp"
            tools:text="已入账" />

        <TextView
            android:id="@+id/tv_production_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            tools:text="已入账" />

        <TextView
            android:id="@+id/tv_production_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/ma_text_orange"
            android:textSize="15sp"
            tools:text="已入账" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_buy_now"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="2dp"
                android:background="@drawable/production_btn_sel"
                android:text="@string/ma_buy_now"
                android:textColor="@drawable/production_btn_text_sel"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_add_cart"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="2dp"
                android:background="@drawable/production_btn_sel"
                android:text="@string/ma_add_to_cart"
                android:textColor="@drawable/production_btn_text_sel"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/text_g"/>
    </LinearLayout>
</LinearLayout>