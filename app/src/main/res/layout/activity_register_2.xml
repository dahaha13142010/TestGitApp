<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@mipmap/login_activity_bg"
    tools:context=".app.activity_login_etc.LoginActivity">

    <com.admin.control.topTitleBackBar.TopTitleBackBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:headerBackground="@color/tab_t_tab"
        app:headerLeftTitle="@string/back"
        app:headerRightImageVisibility="gone"
        app:headerTitle="@string/regist_title"/>


    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="60dp">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/reg_psd_login"
            android:textColor="@color/hint_login"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_1"
            android:background="@android:color/transparent"
            android:inputType="textPassword"
            android:hint="@string/reg_psd_login_hint"
            android:padding="5dp"
            android:singleLine="true"
            android:textColorHint="@color/hint_login" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_1"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="#6a6a6f" />
    <RelativeLayout
        android:id="@+id/rl_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="25dp">

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/reg_psd_confirm"
            android:textColor="@color/hint_login"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_pwd_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_2"
            android:inputType="textPassword"
            android:background="@android:color/transparent"
            android:hint="@string/reg_psd_confirm_hint"
            android:padding="5dp"
            android:singleLine="true"
            android:textColorHint="@color/hint_login" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_2"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="#6a6a6f" />
    <RelativeLayout
        android:id="@+id/rl_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="25dp">

        <TextView
            android:id="@+id/tv_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/reg_recommend"
            android:textColor="@color/hint_login"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_extension"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_toRightOf="@id/tv_4"
            android:background="@android:color/transparent"
            android:hint="@string/reg_recommend_hint"
            android:padding="5dp"
            android:singleLine="true"
            android:textColorHint="@color/hint_login" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_3"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="#6a6a6f" />
    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="35dp"
        android:background="@mipmap/login_bg"
        android:text="@string/regist_title"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>